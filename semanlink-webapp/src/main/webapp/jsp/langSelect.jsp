<!--langSelect.jsp--><%/** * the lang pulldown menu //  2021-01 * Supposed there's a request attribute "net.semanlink.servlet.jsp.lang" */%><%@ page language="java" session="true" import="net.semanlink.semanlink.*,net.semanlink.servlet.*"%><%@ taglib uri="http://struts.apache.org/tags-bean" prefix="bean" %><%@ taglib uri="http://struts.apache.org/tags-html" prefix="html" %><%@ taglib uri="http://struts.apache.org/tags-logic" prefix="logic" %><%
String lang = (String) request.getAttribute("net.semanlink.servlet.jsp.lang");// System.out.println("langSelect " + lang);String[] langs = {"-","de","en","es","fr","pt"};boolean langFoundInLangs = false; // if not, add lang to list of options%><html:select property="lang">   <%   if ((lang == null) || ("".equals(lang))) {  	 langFoundInLangs = true;     %><option value="-" selected>-</option><%   } else {  	 %><option value="-">-</option><%   }   for (int i = 1 ; i < langs.length ; i++) {  	 String la = langs[i];  	 if ((lang != null) && (la.equals(lang))) {  		 langFoundInLangs = true;  		 %><option value="<%=langs[i]%>" selected><%=la%></option><%  	 } else {  		 %><option value="<%=langs[i]%>"><%=la%></option><%  	 }   }      if (!langFoundInLangs) {  	 %><option value="<%=lang%>" selected><%=lang%></option><%   }   %></html:select><!--/langSelect.jsp-->